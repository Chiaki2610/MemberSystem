@model CheckMemberDataViewModel

<table class="table mb-5">
    <thead>
        <tr>
            <th scope="col">會員ID</th>
            <th scope="col">帳號</th>
            <th scope="col">姓名</th>
            <th scope="col">信箱</th>
            <th scope="col">生日</th>
            <th scope="col">電話</th>
            <th scope="col">血型</th>
            <th scope="col">身份</th>
            <th scope="col">狀態</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.CheckList != null && Model.CheckList.Any())
        {
            @for (var i = 0; i < Model.CheckList.Count; i++)
            {
                <tr>
                    <th scope="row">@Model.CheckList[i].MemberId</th>
                    <td>@Model.CheckList[i].UserName</td>
                    <td>@Model.CheckList[i].FullName</td>
                    <td>@Model.CheckList[i].Email</td>
                    <td>@Model.CheckList[i].DateOfBirth</td>
                    <td>@Model.CheckList[i].PhoneNumber</td>
                    <td>@Model.CheckList[i].BloodType</td>
                    <td>@(Model.CheckList[i].RoleId == 1 ? "管理者" : "一般會員")</td>
                    <td>
                        <form asp-controller="Admin" asp-action="UpdateApproved" method="post" style="display:inline;">
                            <input type="hidden" name="MemberId" value="@Model.CheckList[i].MemberId" />
                            <input type="hidden" name="IsApproved" value="true" />
                            <button type="submit" class="btn btn-success">通過</button>
                        </form>
                        <form asp-controller="Admin" asp-action="UpdateApproved" method="post" style="display:inline;">
                            <input type="hidden" name="MemberId" value="@Model.CheckList[i].MemberId" />
                            <input type="hidden" name="IsApproved" value="false" />
                            <button type="submit" class="btn btn-danger">駁回</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<nav class="mb-5">
    <ul class="pagination">
        @if (ViewData["CurrentPage"] != null && ViewData["TotalPages"] != null)
        {
            var currentPage = (int)ViewData["CurrentPage"];
            var totalPages = (int)ViewData["TotalPages"];

            if (currentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("ApproveMember", new { page = currentPage - 1 })">上一頁</a>
                </li>
            }

            for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("ApproveMember", new { page = i })">@i</a>
                </li>
            }

            if (currentPage < totalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("ApproveMember", new { page = currentPage + 1 })">下一頁</a>
                </li>
            }
        }
    </ul>
</nav>

@section endJS
{
    <script>
        const toastType = '@TempData["ToastType"]';
        const toastMessage = '@Html.Raw(TempData["ToastMessage"])';

        if (toastMessage) {
            Swal.fire({
                icon: toastType,
                title: toastType === 'success' ? '完成審核' : '審核失敗',
                text: toastMessage
            });
        }
    </script>
}