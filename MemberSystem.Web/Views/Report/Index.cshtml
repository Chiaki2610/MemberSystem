@model LeaveReportViewModel


@section topCSS
{
    <link href="~/css/register.css" rel="stylesheet" />
}

<div class="container px-5">
    <div class="row">
        <div class="register-container">
            <h2 class="text-center mb-4">(請假)報表查詢</h2>
            <form asp-controller="Report" asp-action="GetLeaveReport" method="post">
                <div class="mb-3">
                    <div class="mb-3">
                        <label asp-for="StartDate">起始日期</label>
                        <input type="date" asp-for="StartDate" class="form-control" placeholder="起始日期" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="mb-3">
                        <label asp-for="EndDate">結束日期</label>
                        <input type="date" asp-for="EndDate" class="form-control" placeholder="結束日期" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <select asp-for="LeaveType" id="filterStatus" class="form-select mx-1">
                        <option value="all">假別</option>
                        <option value="PaidVacation">年假</option>
                        <option value="PersonalLeave">事假</option>
                    </select>
                </div>
                <div class="mb-3">
                    <select asp-for="DepartmentName" id="filterStatus" class="form-select mx-1">
                        <option value="all">選擇部門</option>
                        <option value="ManagerOffice">店長室</option>
                        <option value="FinanceSection">財務課</option>
                    </select>
                </div>
                <div class="mb-3">
                    <input type="number" asp-for="MemberId" class="form-control" placeholder="員工編號(MemberID)" />
                    <span asp-validation-for="MemberId" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-custom w-100">查詢</button>
            </form>
        </div>
    </div>
</div>