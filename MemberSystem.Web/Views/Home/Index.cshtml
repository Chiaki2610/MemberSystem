@{
    ViewData["Title"] = "首頁";
}

<div class="text-center">
    <h1 class="display-4">歡迎來到會員系統</h1>
</div>

@section endJS
{
    <script>
        const toastType = '@TempData["ToastType"]';
        const toastMessage = '@Html.Raw(TempData["ToastMessage"])';

        if (toastMessage) {
            Swal.fire({
                icon: toastType,
                title: toastType === 'success' ? '成功！' : '失敗！',
                text: toastMessage
            });
        }
    </script>
}
