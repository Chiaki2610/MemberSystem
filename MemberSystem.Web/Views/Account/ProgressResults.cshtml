@model List<Member>

<h3>查詢結果<span>共 @Model.Count 筆</span></h3>
<table class="table mb-5">
    <thead>
        <tr>
            <th scope="col">帳號</th>
            <th scope="col">姓名</th>
            <th scope="col">信箱</th>
            <th scope="col">生日</th>
            <th scope="col">電話</th>
            <th scope="col">血型</th>
            <th scope="col">狀態</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
            <tr>
                <td>@member.Username</td>
                <td>@member.FullName</td>
                <td>@member.Email</td>
                <td>@member.DateOfBirth</td>
                <td>@member.PhoneNumber</td>
                <td>@member.BloodType</td>
                <td>@(member.IsApproved == true ? "通過" : member.IsApproved == false ? "駁回" : "未審核")</td>
            </tr>
        }
    </tbody>
</table>
